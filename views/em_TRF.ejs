    <title>Travel Request Form</title>
    <style>
        body {
            font-family: Calibri, sans-serif;
            background-color: #f0f8ff;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            padding: 20px;
        }

        .header img.logo {
            max-width: 200px;
            margin-bottom: 10px;
        }

        .header h1 {
            color: #333;
            margin: 0;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        fieldset {
            border: 2px solid #4CAF50;
            border-radius: 10px;
            margin-bottom: 20px;
            padding: 20px;
        }

        legend {
            color: #4CAF50;
            font-weight: bold;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
        }

        input[type="text"],
        input[type="tel"],
        input[type="email"],
        input[type="date"],
        input[type="time"],
        input[type="number"],
        select,
        datalist {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            width: 100%;
            padding: 15px;
            background-color: #4CAF50;
            border: none;
            border-radius: 5px;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        input:focus,
        select:focus {
            border-color: #4CAF50;
            outline: none;
        }

        .contact-us {
            text-align: center;
            margin-top: 20px;
        }

        .contact-us ul {
            list-style: none;
            padding: 0;
        }

        .contact-us li {
            margin: 5px 0;
        }
    </style>
</head>
